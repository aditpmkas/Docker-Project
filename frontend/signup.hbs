    <form action="/signup" method="post" class="auth-form">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" placeholder="Choose a username" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Create a password" required>
      </div>
      <button type="submit" class="btn btn-primary" style="width:100%;margin-top:1rem;">Sign Up</button>
    </form>
    <div style="text-align:center;margin-top:1.5rem;">
      <a href="./" style="color:#b3baff;">Already have an account? <b>Log In</b></a>
    </div>
  </div>
</body>
</html>
