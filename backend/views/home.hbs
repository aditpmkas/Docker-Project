<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Finance Tracker</title>
  <link rel="stylesheet" href="/static/style.css">
</head>
<body>
  <div class="hello-username-elegant">
    Hello, <span>{{username}}</span>
  </div>
  <div class="floating-shapes">
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
  </div>
  <div class="container">
    <form action="/logout" method="post" style="text-align:right; margin-bottom:10px;">
      <button type="submit" class="btn btn-secondary">Logout</button>
    </form>
    <header>
      <h1>💰 Finance Tracker</h1>
      <p class="subtitle">Take control of your financial future</p>
    </header>
    <section class="summary">
      <div class="card balance">
        <div class="card-icon">⚖️</div>
        <h3>Balance</h3>
        <p id="balance">Rp 0</p>
      </div>
      <div class="card income">
        <div class="card-icon">📈</div>
        <h3>Income</h3>
        <p id="income">Rp 0</p>
      </div>
      <div class="card expense">
        <div class="card-icon">📉</div>
        <h3>Expense</h3>
        <p id="expense">Rp 0</p>
      </div>
    </section>
    <section class="form-section">
      <h2 class="section-title">
        <span>➕</span>
        Add New Transaction
      </h2>
      <form id="transaction-form">
        <div class="form-grid">
          <div class="form-group full-width">
            <label for="description">Description</label>
            <input type="text" id="description" placeholder="Enter transaction description" required>
          </div>
          <div class="form-group">
            <label for="amount">Amount (Rp)</label>
            <input type="number" id="amount" placeholder="0" required>
          </div>
          <div class="form-group">
            <label for="type">Transaction Type</label>
            <select id="type" required>
              <option value="">Select Type</option>
              <option value="income">💰 Income</option>
              <option value="expense">💸 Expense</option>
            </select>
          </div>
          <div class="form-group full-width">
            <button type="submit" class="btn btn-primary">Add Transaction</button>
          </div>
        </div>
      </form>
    </section>
    <section class="history-section">
      <h2 class="section-title">
        <span>📊</span>
        Transaction History
      </h2>
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Description</th>
              <th>Type</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody id="transaction-table">
            <tr>
              <td colspan="4" class="empty-state">
                <div class="empty-state-icon">📝</div>
                <p>No transactions yet. Add your first transaction above!</p>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
  </div>
  <script src="/static/script.js"></script>
</body>
</html>
